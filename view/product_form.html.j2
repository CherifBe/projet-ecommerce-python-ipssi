    <form method="post" class="d-flex flex-column" style="width: 30vw; margin-inline: auto; margin-top:50px">
        <div class="form-group d-flex justify-content-between" style="margin-bottom: 20px;">
            <label for="name">Nom</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Nom du produit" style="width: 70%;"/>
        </div>
        <div class="form-group d-flex justify-content-between" style="margin-bottom: 20px;">
            <label for="description">Description</label>
            <input type="text" class="form-control" id="description" name="description" placeholder="Description du produit" style="width: 70%;"/>
        </div>
        <div class="form-group d-flex justify-content-between" style="margin-bottom: 20px;">
            <label for="image">Image</label>
            <input type="url" class="form-control" id="image" name="image" placeholder="https://" style="width: 70%;"/>
        </div>
        <div class="form-group d-flex justify-content-between" style="margin-bottom: 20px;">
            <label for="price">Prix</label>
            <input type="number" class="form-control" id="price" name="price" placeholder="$" style="width: 70%;"/>
        </div>
        <div class="form-group d-flex justify-content-between" style="margin-bottom: 20px;">
            <label for="stock">Stock</label>
            <input type="number" class="form-control" id="stock" name="stock" placeholder="Stock" style="width: 70%;"/>
        </div>
        <button type="submit" class="btn btn-primary">Continue</button>
    </form>

